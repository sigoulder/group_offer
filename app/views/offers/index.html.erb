<h2>Offers</h2>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Min participants</th>
      <th>Max participants</th>
      <th>Start at</th>
      <th>End at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= link_to offer.name, offer %></td>
        <td><%= offer.min_participants %></td>
        <td><%= offer.max_participants %></td>
        <td><%= offer.start_at.strftime("%d/%m/%Y") %></td>
        <td><%= offer.end_at.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <td><%= link_to 'Remove', offer, method: :delete, data: { confirm: "Are you sure you want to remove #{offer.name}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Offer', new_offer_path %>
