<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Offer</th>
      <th>Participants (Min)</th>
      <th>Participants (Max)</th>
      <th>Start Date</th>
      <th>End Date</th>
    </tr>
  </thead>
  <tbody align="center">
    <tr>
      <td>
        <%= @offer.id %>
      </td>
      <td>
        <%= @offer.name %>
      </td>
      <td>
        <%= @offer.min_participants %>
      </td>
      <td>
        <%= @offer.max_participants %>
      </td>
      <td>
        <%= @offer.start_at.strftime("%d/%m/%Y") %>
      </td>
      <td>
        <%= @offer.end_at.strftime("%d/%m/%Y") %>
      </td>
    </tr>
  </tbody>
</table>

<h3>Tasks:</h3>
<table border="2" cellpadding="10" cellspacing="2">
  <thead>
    <tr>
      <th rowspan="2"></th>
      <th colspan="<%= @eachparts.count %>">Participants</th>
    </tr>
    <tr>
        <% @eachparts.each do |part| %>
        <th width="75">User <%= part.id %></th>
      <% end %>
    </tr>
  </thead>
  <tbody align="center">
    <% @eachtasks.each do |task| %>
      <tr>
        <td>
          <strong><%= task.name %> (<%= task.task_types.name %>)</strong>
        </td>
        <% @eachparts.each do |count| %>
          <td><%= check_box_tag(:test) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<h4>Add New Task:</h4>
<%= form_tag(tasks_path, method: "post") do %>
<%= text_field_tag("name", nil, placeholder: "Name") %>
<%= text_field_tag("quota", nil, placeholder: "Quota") %>
<%= select_tag("type_id", options_for_select([['Compulsory', 1], ['Optional', 2], ['Any X in Y', 3]])) %>
<%= hidden_field_tag("offer_id", @offer.id) %>
<%= submit_tag("Add Task") %> 
<% end %>
<br>



